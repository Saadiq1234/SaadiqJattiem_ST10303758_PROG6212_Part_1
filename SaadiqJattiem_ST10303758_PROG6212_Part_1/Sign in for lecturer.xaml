<Window x:Class="SaadiqJattiem_ST10303758_PROG6212_Part_1.Sign_in_for_lecturer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaadiqJattiem_ST10303758_PROG6212_Part_1"
        mc:Ignorable="d"
        Title="Sign_in_for_lecturer" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Username:" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,50,0,0"/>
        <TextBox x:Name="UsernameTextBox" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,50,0,0"/>

        <TextBlock Text="Password:" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,100,0,0"/>
        <PasswordBox x:Name="PasswordBox" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,100,0,0"/>

        <Button Content="Login" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50"/>
        <Button Content="Create Account" Width="150" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"/>

    </Grid>
</Window>
